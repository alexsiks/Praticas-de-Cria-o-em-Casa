        <div>
            <h1 class="Textocodigo">Informe um Codigo do Produto:<h1>
                    <input class="CampodePreenchimento" id="codigo1"></input>




                    <Button type="button" onclick="Informar();">Procurar Codigo</Button>

        </div>
        <br>

    </main>


    <p id="respcodigo1"></p>

<p id="rproduto1"></p>




    <script type="text/javascript">






        function Informar() {
            var informação = document.getElementById("codigo1")).value;



            switch (informação) {
                case 1:
                    document.getElementById("respcodigo1").innerHTML = ("Retorno da sua Resposta");

                    break;


                case 2:
                    document.getElementById("respcodigo1").innerHTML = ("Retorno da sua Resposta");

                    break;


                default:
                    document.getElementById("respcodigo1").innerHTML = ("Codigo não cadastrado");
            }
        }








    </script>


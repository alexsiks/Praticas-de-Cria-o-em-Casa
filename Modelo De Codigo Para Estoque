       <script>
           
           function procurar(){
           
          
           var informaçao = document.getElementById("campo1").value;

                      


           var codigo = parseInt(informaçao);
           

            
           
      if (codigo == 1)

   document.getElementById("resp1").innerHTML = (" Snap");


if (codigo == 2)

   document.getElementById("resp1").innerHTML = (" O produto esta salvo");

if (codigo == 3)

   document.getElementById("resp1").innerHTML = (" O produto esta salvo");

if (codigo == 4)

   document.getElementById("resp1").innerHTML = (" O produto esta salvo");

if (codigo == 5)

   document.getElementById("resp1").innerHTML = (" O produto esta salvo");

if (codigo == 6)

   document.getElementById("resp1").innerHTML = (" O produto esta salvo");

if (codigo == 7)

   document.getElementById("resp1").innerHTML = (" O produto esta salvo");

if (codigo == 8)

   document.getElementById("resp1").innerHTML = (" O produto esta salvo");

if (codigo > 8)

   document.getElementById("resp1").innerHTML = (" O produto Nao Cadastrado");


}

